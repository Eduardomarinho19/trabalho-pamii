rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Função helper para verificar se o usuário está autenticado
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Função helper para verificar se é o dono do recurso
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Regras para a coleção de itens
    match /items/{itemId} {
      // Permitir leitura apenas se autenticado e o item pertence ao usuário
      allow read: if isAuthenticated() && 
                     resource.data.userId == request.auth.uid;
      
      // Permitir criação apenas se autenticado e o userId corresponde ao usuário atual
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.name is string &&
                       request.resource.data.name.size() > 0 &&
                       request.resource.data.price is number &&
                       request.resource.data.price >= 0;
      
      // Permitir atualização apenas do próprio item
      allow update: if isAuthenticated() && 
                       resource.data.userId == request.auth.uid &&
                       request.resource.data.userId == request.auth.uid;
      
      // Permitir exclusão apenas do próprio item
      allow delete: if isAuthenticated() && 
                       resource.data.userId == request.auth.uid;
    }
    
    // Regras para a coleção de usuários
    match /users/{userId} {
      // Usuários só podem ler seu próprio perfil
      allow read: if isOwner(userId);
      
      // Usuários só podem criar/atualizar seu próprio perfil
      allow create, update: if isOwner(userId) && 
                              request.resource.data.uid == userId &&
                              request.resource.data.email is string;
      
      // Não permitir exclusão de perfis
      allow delete: if false;
    }
  }
}
